<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="?attr/colorPrimary"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/imagemFilme"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="8dp"
        android:background="@android:color/background_light"
        android:contentDescription="@string/talkback_imagem" />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_weight="1.31">


        <TextView
            android:id="@+id/filme_tituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/titulo_fime"
            android:text="@string/titulo_fime"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_row="0"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/data_public_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/public_desc"
            android:layout_alignBottom="@+id/public_desc"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_toEndOf="@+id/public_desc"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="0"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="69dp" />

        <TextView
            android:id="@+id/public_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/filme_tituloTextView"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="@string/data_public"
            android:padding="3dp"
            android:text="@string/data_public"
            android:textColor="@android:color/white"
            app:layout_column="0"
            app:layout_row="1"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="65dp" />


        <!-- <Button
            android:id="@+id/btnSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/publish_descr"
            android:background="@null"
            android:text="@string/see_more"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />-->
    </RelativeLayout>


</LinearLayout>

